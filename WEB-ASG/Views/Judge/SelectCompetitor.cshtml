@model WEB_ASG.Models.CompetitionScore

@{
    ViewData["Title"] = "AssignScore";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h1>Select Competitor</h1>
</div>
<hr />
<form style="margin-top: 30px" asp-action="SelectCompetitor">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="CompetitorID"
                   class="col-sm-3 col-form-label">Competitior Name</label>
            <div class="col-sm-9 col-md-5">
                <select asp-for="CompetitorID"
                        asp-items="@ViewData["CompetitorNames"]
 as List<SelectListItem>"
                        class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Next"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to Home</a>
        </div>
    </fieldset>
</form>
