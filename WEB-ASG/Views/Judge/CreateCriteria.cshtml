@model WEB_ASG.Models.Criteria

@{
    ViewData["Title"] = "CreateCriteria";
}

<h4 class="PageTitle">Create Judging Criteria</h4>
<hr />
<form asp-action="CreateCriteria">
    <fieldset class="FormContent">
        <div class="form-group row">
            <label asp-for="CompetitionID"
                   class="col-sm-3 col-form-label">CompetitionName</label>
            <div class="col-sm-9 col-md-5">
                <select asp-for="CompetitionID"
                        asp-items="@ViewData["CompetitionName"]
 as List<SelectListItem>"
                        class="form-control">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CriteriaName"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="CriteriaName" class="form-control" />
                <span asp-validation-for="CriteriaName"
                      class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Weightage"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Weightage" class="form-control" />
                <span asp-validation-for="Weightage"
                      class="text-danger"></span>
            </div>
        </div>        
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                <input type="submit" value="Create"
                       class="btn btn-primary" />
            </div>
        </div>
        <div>
            <a asp-action="ViewCriteria">Back to List</a>
        </div>
    </fieldset>
</form>
