@model IEnumerable<WEB_ASG.Models.CompetitionSubmissionViewModel>

@{
    ViewData["Title"] = "ViewRankings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style= "margin-bottom:25px">View Rankings</h1>

@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>CompetitorID</th>
                    <th>CompetitorName</th>
                    <th>Appeal</th>
                    <th>VoteCount</th>
                    <th>Ranking</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompetitorID.ToString()</td>
                        <td>
                            @item.CompetitorName
                        </td>
                        <td>@item.Appeal</td>
                        <td>@item.VoteCount</td>
                        <td>@item.Ranking</td>
                        <td>
                            <a asp-action="EditRanking" asp-controller="Judge"
                               asp-route-id="@item.CompetitorID">Edit</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}

<div>
    <a asp-action="Index">Back to Index</a>
</div>
