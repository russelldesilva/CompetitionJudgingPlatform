@model WEB_ASG.Models.AreaInterest

@{
    ViewData["Title"] = "DeleteAreaInterest";
    Layout = "_AdminMenu";
}

<h1>Delete @Model.Name</h1>

<form asp-action="DeleteAreaInterest">
    <fieldset class="FormContent">
        <legend>Are you sure to delete this record?</legend>
        <div class="form-group row">
            <label asp-for="AreaInterestID"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="AreaInterestID" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Name"
                   class="col-sm-3 col-form-label"></label>
            <div class="col-sm-9 col-md-5">
                <input asp-for="Name" readonly
                       class="form-control-plaintext" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-9 offset-sm-3">
                @if (Model.CompetitonList != null && Model.CompetitonList.Count > 0)
                {
                    <p class="text-danger">Can't delete this Area of Interest if it has competitions assigned</p>
                    <input type="submit" value="Delete" class="btn btn-secondary" hidden />

                }
                else
                {
                    <input type="submit" value="Delete" class="btn btn-danger" />
                }
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </fieldset>
</form>
